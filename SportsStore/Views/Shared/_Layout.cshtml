<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/bootstrap/dist/**/*.min.css"
          asp-href-include="~/bootstrap/dist/**/*.min.css"
          asp-href-exclude=""/>
    <link rel="stylesheet" asp-href-include="~/font-awesome/css/*.css"/>
    <title>SportsStore</title>
</head>
<body>
    <div class="navbar navbar-light bg-light" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">SPORTS STORE</a>
            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>

    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>

        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
